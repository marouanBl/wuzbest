<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Refname</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th>Released at</th>
    <th>Long desc</th>
    <th>Manufacturer</th>
    <th>Brag</th>
    <th>Original product</th>
    <th>Slug</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.refname %></td>
    <td><%= product.created_at %></td>
    <td><%= product.updated_at %></td>
    <td><%= product.released_at %></td>
    <td><%= product.long_desc %></td>
    <td><%= product.manufacturer_id %></td>
    <td><%= product.brag_id %></td>
    <td><%= product.original_product_id %></td>
    <td><%= product.slug %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

